<h2> Upcoming </h2>

<% if @events.upcoming.any? %>
<ul>
	<% @events.upcoming.each do |e| %>
	<li>
		<%= link_to e.name, e %>
	</li>
	<% end %>
</ul>
<% else %>
<p> There are no upcoming events 
</p>
<% end %>

<h2> Past </h2>

<% if @events.past.any? %>
<ul>
	<% @events.past.each do |e| %>
	<li>
		<%= link_to e.name, e %>
	</li>
	<% end %>
</ul>
<% else %>
<p> There are no past events 
</p>
<% end %>